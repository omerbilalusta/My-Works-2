	ilk->next->next->next=(n*)malloc(sizeof(n));
	ilk->next->next->next->next=(n*)malloc(sizeof(n));
	ilk->next->next->next->next->next=(n*)malloc(sizeof(n));
	ilk->next->next->next->next->next->next=(n*)malloc(sizeof(n));
