int silme (int silineceksayi)
{
	int b=0;
	gecici=ilk;
	while(gecici!=NULL)
	{
		if(gecici->x==silineceksayi) 
		{
			b++;
			a=gecici;
			break;
		}
		//bironceki=gecici;
		gecici=gecici->next;
	}
	printf("...");
	if(b>0)
	{
		if(ilk->x==silineceksayi)
		{
			a=ilk;
			ilk=ilk->next;
			free(a);
		}
		else
		{
			gecici=ilk;
			b++;
			while (gecici->next!=a)
			{
				gecici=gecici->next;
			}
			gecici->next=gecici->next->next;
			free(a);
		}
		
	}
	printf("Silme islemi basarilidir");
			
}

