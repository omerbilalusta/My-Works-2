typedef struct	n
{
	int x;
	char y[10],z[10];
	struct n *next;
}BListe;
BListe *ilk=NULL, *son=NULL,*gecici=NULL,*bironceki=NULL,*a=NULL;



int arama(int sayi)
{
		gecici=ilk;
		int sayac=1;
		while(gecici!=NULL)
		{
			if(gecici->x==sayi)
			{
				return sayac;
			}
			else if(sayac==6)
			{
				printf("Aramak istediginiz sayi bulunamadi");
			}
			gecici=gecici->next;
			sayac++;
		}
		return 0;
}

int listele()
	{
	gecici=ilk;
	while(gecici!=NULL)
		{
			printf("%d %s %s \n", gecici->x,gecici->y,gecici->z);
			gecici=gecici->next;
	
		}
	}	

